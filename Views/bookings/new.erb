<h1 style="text-align:center;">Make a booking</h1>

<form style="text-align:center;" action="/bookings" method="post">
  <label>
  Select a member:
    <select name="member_id">
      <% for member in @members %>
      <option  value="<%= member.id %>"><%= member.first_name %></option>
      <% end %>
    </select>
    <br>
    <br>
    <br>
    <br>

    <label for="activity-select">Select activity</label>
    <select id="activity-select" name="activity_id">
        <option Selected Disabled>Select Activity</option>
        <% for activity in @activities %>
        <option value=<%= activity.id %>><%= activity.name %></option>
        <% end %>
      </select>
      <br>
      <br>
      <br>
      <br>
  <input  type='submit' value="Book">
</form>
