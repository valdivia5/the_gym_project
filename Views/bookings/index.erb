<h1>Bookings</h1>

<p
  <a  href="../new">List of all bookings.</a>
</p>

<ul>
  <% for booking in @bookings %>
  <li>
  <p>The member: <%= booking.member.first_name %> has booked <%= booking.activity.name %> at
  <%= booking.activity.date_and_time %></p>
    <p>
      <form action="/bookings/<%= booking.id %>/delete" method="POST">
        <input type="submit" value="delete" />
      </form>
      <form action="/bookings/<%= booking.id %>/new" method="POST">
        <input type="submit" value="update" />
      </form>
   </p>
  </li>
  <% end %>
</ul>
